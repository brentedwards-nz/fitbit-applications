    gradient-x2="0" gradient-y2="100%-50"
    gradient-color1="magenta" gradient-color2="red" 
  />

  <!-- <rect id="background" /> -->
  <text id="clock" class="clockLabelStyle clockLabelPosition"/>

  <text id="hr" class="hrLabelStyle hrLabelPosition"/>
